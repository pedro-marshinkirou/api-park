    "components":{
        "securitySchemes": {
            "bearerAuth": {
              "type": "http",
              "scheme": "bearer",
              "bearerFormat": "JWT"
            }
          },
          "schemas": {
            "User": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "telefone": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "modelo": {
                    "type": "string"
                },
                "placa": {
                    "type": "string"
                },
                "avatar": {
                  "type": "string"
                },
                "background": {
                  "type": "string"
                }
              }
            },
            "Park": {
              "type": "object",
              "properties": {
                "usuario": {
                  "type": "string"
                },
                "profpic": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "likes": {
                  "type": "number"
                },
                "comments": {
                  "type": "array"
                },
                "Criado": {
                  "type": "date"
                }
              }
            },
            "Comments": {
              "type": "object",
              "properties": {
                "comment": {
                  "type": "string"
                }
              }
            }
          }
